{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "noEmitOnError": false,
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types"
    ],
    // "types": [
    //   "node"
    // ]
  },
  "include": [
    "src/**/*",
    "api/**/*",
    "./index.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
